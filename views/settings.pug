doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Change Password
    //–– Inline cyber-punk CSS ––
    style.
      @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

      /* 1) Reset & base */
      html, body {
        margin: 0; padding: 0;
        width: 100vw; height: 100vh;
        overflow: hidden;
        font-family: 'Orbitron', sans-serif;
        color: #fff;
      }

      /* 2) Background image + dark overlay */
      body {
        position: relative;
        background: url('/imgs/login1.jpg') center/cover no-repeat;
      }
      body::before {
        content: '';
        position: absolute;
        top:0; left:0; right:0; bottom:0;
        background: rgba(0,0,0,0.7);
        z-index: 0;
      }

      /* 3) Card container */
      .settings-card {
        position: absolute;
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0,0,0,0.85);
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 0 30px #0ff;
        text-align: center;
        z-index: 1;
        width: 320px;
      }

      /* 4) Neon heading */
      .settings-card h1 {
        margin: 0 0 1.5rem;
        font-size: 2.5rem;
        color: #0ff;
        text-shadow: 0 0 8px #0ff, 0 0 16px #0ff;
      }

      /* 5) Input styles */
      form.settings-form {
        display: flex;
        flex-direction: column;
      }
      form.settings-form label {
        margin-top: 1rem;
        text-transform: uppercase;
        font-size: 0.9rem;
        color: #0ff;
      }
      form.settings-form input[type="password"] {
        margin-top: 0.5rem;
        padding: 0.75rem;
        font-size: 1rem;
        border: 2px solid #0ff;
        border-radius: 4px;
        background: rgba(0,0,0,0.6);
        color: #fff;
        transition: border-color .2s, box-shadow .2s;
      }
      form.settings-form input[type="password"]:focus {
        outline: none;
        border-color: #ff0066;
        box-shadow: 0 0 10px #ff0066;
      }

      /* 6) Animated gradient button */
      @keyframes gradientAnim {
        0%   { background-position:   0% 50%; }
        50%  { background-position: 100% 50%; }
        100% { background-position:   0% 50%; }
      }
      form.settings-form button {
        margin: 1.5rem auto 0;
        width: 180px;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: bold;
        color: #000;
        background: linear-gradient(45deg, #ff0066, #ffcc00, #00ffcc, #ff0066);
        background-size: 400% 400%;
        animation: gradientAnim 6s ease infinite;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        transition: transform .2s, box-shadow .2s;
      }
      form.settings-form button:hover {
        transform: scale(1.05);
        box-shadow: 0 0 15px #ff0066;
      }

      /* 7) Message */
      .settings-card p {
        margin-top: 1rem;
        color: #ff4444;
        font-size: 0.9rem;
      }

      /* 8) Footer link */
      .settings-card ul {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0 0;
      }
      .settings-card ul li a {
        font-size: 1rem;
        color: #0ff;
        text-decoration: none;
        text-transform: uppercase;
        padding: 0.5rem 1rem;
        border: 2px solid #0ff;
        border-radius: 4px;
        box-shadow: 0 0 8px #0ff;
        transition: background .2s, color .2s;
      }
      .settings-card ul li a:hover {
        background: #0ff;
        color: #000;
      }

  body
    .settings-card
      h1 Change Password
      form.settings-form(method="POST", action="/settings")
        label(for="current") Current Password
        input#current(type="password", name="current", required)
        label(for="new") New Password
        input#new(type="password", name="new", required)
        button(type="submit") Change Password
      if msg
        p= msg
      ul
        li
          a(href="/home") Home
