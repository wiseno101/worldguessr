doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title REGISTER
    //–– Inline cyber-punk CSS with background image ––
    style.
      @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

      /* Reset & base */
      html, body {
        margin: 0; padding: 0;
        width: 100vw; height: 100vh;
        overflow: hidden;
        background: #000;
        font-family: 'Orbitron', sans-serif;
        color: #fff;
      }

      /* 1) Full-screen background image + dark overlay */
      body.form-background {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('/imgs/login1.jpg') center/cover no-repeat;
      }
      body.form-background::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(0,0,0,0.6);
        z-index: 0;
      }

      /* 2) Card container above overlay */
      .form-container {
        position: relative;
        z-index: 1;
        background: rgba(0,0,0,0.85);
        padding: 4rem;
        border-radius: 12px;
        box-shadow: 0 0 30px #0ff;
        width: 90%;
        max-width: 800px;
        min-width: 500px;
        box-sizing: border-box;
      }

      /* 3) Neon title */
      .form-title {
        position: relative;
        z-index: 1;
        margin-bottom: 2rem;
        font-size: 3rem;
        color: #0ff;
        text-shadow: 0 0 10px #0ff, 0 0 20px #0ff;
        text-align: center;
      }

      /* 4) Spaced-out input groups */
      .input {
        position: relative;
        z-index: 1;
        margin-bottom: 1.5rem;
      }
      .input label {
        display: block;
        margin-bottom: 0.75rem;
        font-size: 1.2rem;
        color: #fff;
      }
      .input input {
        width: 100%;
        padding: 1rem;
        font-size: 1.2rem;
        border: 2px solid #0ff;
        border-radius: 4px;
        background: rgba(0,0,0,0.6);
        color: #fff;
        transition: border-color 0.2s, box-shadow 0.2s;
      }
      .input input:focus {
        outline: none;
        border-color: #ff0066;
        box-shadow: 0 0 12px #ff0066;
      }

      /* 5) Animated gradient submit */
      input#submit {
        position: relative;
        z-index: 1;
        width: 100%;
        padding: 1.5rem;
        font-size: 1.3rem;
        background: linear-gradient(45deg, #ff0066, #ffcc00, #00ffcc, #ff0066);
        background-size: 400% 400%;
        animation: gradientAnim 6s ease infinite;
        border: none;
        border-radius: 30px;
        color: #000;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      input#submit:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px #ff0066;
      }
      @keyframes gradientAnim {
        0%   { background-position:   0% 50%; }
        50%  { background-position: 100% 50%; }
        100% { background-position:   0% 50%; }
      }

      /* 6) Error message */
      .error p {
        position: relative;
        z-index: 1;
        color: #ff4444;
        text-align: center;
        margin-top: 1rem;
        font-size: 1.1rem;
      }

      /* 7) Footer links */
      ul {
        position: relative;
        z-index: 1;
        display: flex;
        gap: 2rem;
        justify-content: center;
        margin-top: 2rem;
      }
      ul li a {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border: 2px solid #0ff;
        border-radius: 4px;
        color: #0ff;
        text-decoration: none;
        box-shadow: 0 0 12px #0ff;
        transition: background 0.2s;
      }
      ul li a:hover {
        background: rgba(0,255,255,0.2);
      }

  body.form-background
    main
      h1.form-title Create Your Account
      form.form-container(method="POST")
        .input
          label(for="uname") Username
          input#uname(type="text", name="uname", value=uname)
        .input
          label(for="pword") Password
          input#pword(type="password", name="pword")
        .input
          label(for="email") Email
          input#email(type="email", name="email", value=email)
        .input
          input#submit(type="submit", value="Submit")
      if msg
        .error
          p= msg
      ul
        li
          a(href='/') Landing Page
        li
          a(href='/login') Login
