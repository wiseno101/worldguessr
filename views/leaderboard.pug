doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Leaderboard
    //–– Inline cyber-punk CSS ––
    style.
      @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

      /* Reset & base */
      html, body {
        margin: 0; padding: 0;
        width: 100vw; height: 100vh;
        overflow: auto;
        font-family: 'Orbitron', sans-serif;
        color: #fff;
      }

      /* Background image + dark overlay */
      body.leaderboard-background {
        position: relative;
        background: url('/imgs/login1.jpg') center/cover no-repeat;
        background-attachment: fixed;  /* keep the image locked behind the overlay */
      }
      body.leaderboard-background::before {
        content: '';
        position: fixed;       /* ← fixed so it stays put over the whole viewport */
        top: 0; left: 0;
        width: 100vw; height: 100vh;  /* cover the entire viewport no matter the scroll */
        background: rgba(0,0,0,0.7);
        z-index: 0;
      }

      /* Container card */
      main.container {
        position: relative; z-index: 1;
        max-width: 900px;
        margin: 3rem auto;
        padding: 2rem;
        background: rgba(0,0,0,0.85);
        border-radius: 12px;
        box-shadow: 0 0 30px #0ff;
      }

      /* Page title */
      h1 {
        margin: 0 0 1.5rem;
        text-align: center;
        font-size: 3rem;
        color: #0ff;
        text-shadow: 0 0 8px #0ff, 0 0 16px #0ff;
      }

      /* Game section */
      .game-leaderboard {
        margin-bottom: 2rem;
      }
      .game-leaderboard h2 {
        margin: 0 0 0.75rem;
        font-size: 1.5rem;
        color: #0ff;
        text-shadow: 0 0 6px #0ff;
      }

      /* Table styling */
      table {
        width: 100%;
        border-collapse: collapse;
      }
      thead th {
        color: #000;
        padding: 0.75rem;
        text-transform: uppercase;
        font-size: 0.9rem;
        box-shadow: inset 0 0 6px #000;
      }
      /* Distinct header colors */
        thead th:nth-child(1) { background: #ff0066; }
        thead th:nth-child(2) { background: #00ffcc; }
        thead th:nth-child(3) { background: #ffcc00; }

      tbody tr {
        transition: background 0.2s;
      }
      tbody tr:hover {
        background: rgba(0,255,255,0.1);
      }
      tbody td {
        padding: 0.5rem 0.75rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        font-size: 0.9rem;
      }

      /* No-scores message */
      .no-scores {
        text-align: center;
        font-style: italic;
        color: #aaa;
      }

  body.leaderboard-background
    main.container
      h1 Leaderboards
      each game in games
        - const validScores = (game.scores || []).filter(s => s.user && s.score !== null);
        if validScores.length
          .game-leaderboard
            h2 #{game._id} – #{game.description}
            table
              thead
                tr
                  th Rank
                  th User
                  th Score
              tbody
                - const sorted = validScores.sort((a, b) => parseInt(b.score) - parseInt(a.score));
                each score, index in sorted
                  tr
                    td #{index + 1}
                    td #{score.user}
                    td #{score.score}
        else
          .game-leaderboard
            h2 #{game._id} – #{game.description}
            p.no-scores No scores yet.
